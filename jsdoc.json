{
  "tags": {
    "allowUnknownTags": false
  },
  "plugins": ["plugins/markdown"],
  "source": {
    "include": "./lib",
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "systemName": "Lounge",
    "copyright": "(c) Bojan D",
    "linenums": true,
    "default": {
      "outputSourceFiles": true
    }
  },
  "opts": {
    "template": "node_modules/docdash",
    "encoding": "utf8",
    "destination": "api-docs/",
    "recurse": true,
    "verbose": true
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": true
  }
}
