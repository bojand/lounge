{
  "name": "lounge",
  "description": "Simple Mongoose-inspired ODM for Couchbase",
  "version": "0.21.0",
  "homepage": "https://github.com/bojand/lounge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/bojand/lounge.git"
  },
  "bugs": {
    "url": "http://github.com/bojand/lounge/issues"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "index.js",
  "author": {
    "name": "Bojan Djurkovic <dbojan@gmail.com>"
  },
  "scripts": {
    "test": "npm run test-mocha && npm run test-ava",
    "test-mocha": "LOUNGE_COUCHBASE_MOCK=true mocha --exit test/*.spec.js",
    "test-ava": "LOUNGE_COUCHBASE_MOCK=true ava -v -s",
    "cover": "LOUNGE_COUCHBASE_MOCK=true nyc npm run test",
    "docs:api": "echo '# API Reference\\n' > docs/api/readme.md && jsdoc2md lib/*.js >> docs/api/readme.md",
    "docs:dev": "vuepress dev docs",
    "docs:build": "npm run docs:api && vuepress build docs"
  },
  "dependencies": {
    "async": "^2.6.1",
    "clone": "^2.1.2",
    "couchbase-driver": "^0.5.1",
    "debug": "~4.1.0",
    "escape-string-regexp": "^1.0.5",
    "grappling-hook-lounge": "~1.0.0",
    "inflection": "^1.8.0",
    "lodash": "^4.17.10",
    "memoizee": "^0.4.12",
    "mpath": "^0.4.1",
    "traverse": "^0.6.6",
    "uuid": "^3.3.2",
    "with-callback": "^1.0.2"
  },
  "peerDependencies": {
    "couchbase": "^2.4.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "benchmark": "^2.1.4",
    "chai": "^4.0.2",
    "couchbase": "^2.5.1",
    "greenkeeper-lockfile": "^1.15.1",
    "jsdoc-to-markdown": "^4.0.0",
    "lodash3": "~3.10.0",
    "markdown-it-highlightjs": "^3.0.0",
    "marky": "^1.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "standard": "^11.0.1",
    "validator": "^10.4.0",
    "vuepress": "^0.13.1"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ]
  },
  "directories": {
    "test": "test"
  },
  "standard": {
    "globals": [
      "describe",
      "expect",
      "it"
    ]
  },
  "keywords": [
    "couchbase",
    "document",
    "model",
    "schema",
    "database",
    "odm",
    "data",
    "datastore",
    "query",
    "nosql",
    "orm",
    "db"
  ],
  "config": {
    "nyc": {
      "include": [
        "lib/*.js"
      ]
    }
  }
}
